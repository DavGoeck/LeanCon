generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt


  firstName String
  lastName String
  sex Sex?

  email String
  hash String

  @@map("users")
}

model Project {
  id String @id @default(uuid())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt


  title String
  slug String

  published DateTime?

  contractors Contractor[]

  @@map("projects")
}

model Contractor {
  id String @id @default(uuid())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt


  name String
  email String
  start DateTime?
  end DateTime?

  token String? @unique

  projectId String
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("contractors")
}

enum Sex {
  MALE
  FEMALE
}
